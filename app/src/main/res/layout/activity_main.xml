<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".view.MainActivity"
                                                   android:background="@color/colorPrimary">

    <tech.jpco.qen.view.QenPage
            android:id="@+id/qenPage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <Button
            android:text="@string/clear_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cycle_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/cycle_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cycle_button"
            app:layout_constraintStart_toEndOf="@+id/clear_button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/new_button" app:layout_constraintTop_toTopOf="@+id/clear_button"
            app:layout_constraintBottom_toBottomOf="@+id/clear_button"/>
    <Button
            android:text="@string/new_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/cycle_button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/cycle_button"
            app:layout_constraintBottom_toBottomOf="@+id/cycle_button"/>
    <!--Was going to be an eraser affordance:
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/pencil"
            android:id="@+id/switch1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            />
            -->

</androidx.constraintlayout.widget.ConstraintLayout>